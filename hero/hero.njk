{# Hero #}

<header class="section module-hero {{ item.container }}" style="background-image: url({{ item.background }})">
    <div class="row justify-content-start hero-wrapper">
        <article class="hero-inner">
          <div class="blurb">
            <h1>{{ item.header }}</h1>
            {{ item.smblurb | markdownFilter | safe }}
            {{ item.lgblurb | markdownFilter | safe }}
          </div>
      </article>
    </div> 
</header>